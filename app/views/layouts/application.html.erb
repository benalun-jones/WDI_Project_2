<!DOCTYPE html>
<html>
<head>
  <title>Giggle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet' type='text/css'>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAi1hHCeRpJ5mCf-9wviYpsUXRYRZgk984"></script>

</head>

<% if params[:controller] != "static_pages" && params[:action] != "home" %>
<header>
  <nav class="topbar">
  <%= image_tag 'ben_logo_new.png' %>
    <h1>Giggle</h1>
    <ul id="nav">
      <li class="top"><%= link_to "Home", root_path %></li>
      <li class="top"><%= link_to "Gigs", gigs_path %></li>
      <% if current_user %>
      <li class="top"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      
      <% else %>
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Register", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
<% end %> 
<body>
  <main>  
    <%= yield %>
  </main>

</body>
</html>
